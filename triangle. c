#include <stdio.h>

int main() {
    int i, j, n;

    printf("Enter number of rows: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {       // outer loop → rows
        for (j = 1; j <= i; j++) {   // inner loop → stars in each row
            printf("*");
        }
        printf("\n");                // new line
    }

    return 0;
}