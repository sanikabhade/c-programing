#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    int i, len;

    printf("Enter a string: ");
    gets(str); // Note: gets is unsafe, but simple for learning

    len = strlen(str);

    // Reverse logic
    for(i = 0; i < len; i++) {
        rev[i] = str[len - 1 - i];
    }
    rev[len] = '\0'; // Null terminate

    printf("Reversed string: %s", rev);

    return 0;
}